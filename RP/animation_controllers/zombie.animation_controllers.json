{
	"format_version": "1.19.0",
	"animation_controllers": {
		"controller.animation.zombie.movimiento": {
			"initial_state": "idle",
			"states": {
				"idle": {
					"animations": [
						"riding.legs"
					],
					"transitions": [
						{
							"walking": "q.ground_speed > 1.0"
						}
					],
					"blend_transition": 0.2
				},
				"walking": {
					"animations": [
						"riding.arms"
					],
					"transitions": [
						{
							"idle": "q.ground_speed < 0.5"
						}
					],
					"blend_transition": 0.2
				}
			}
		}
	}
}